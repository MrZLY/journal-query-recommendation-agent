{
  "agent": {
    "name": "期刊查询/投稿期刊推荐智能体",
    "description": "Journal Recommender Agent",
    "welcomeMessage": "输入任意期刊，查询影响因子、分区和风评；输入文章摘要/课题描述，利用大模型行进行合适期刊全面推荐。\n  试试：\n查询期刊“nature” \n  期刊推荐。课题是化学理论计算算法和生物结构解析（dna）交叉的学术期刊”",
    "module": "agent.agent",
    "rootAgent": "root_agent"
  },
  "ui": {
    "title": "期刊查询/投稿期刊推荐智能体",
    "theme": {
      "primaryColor": "blue",
      "secondaryColor": "purple"
    },
    "features": {
      "showFileExplorer": true,
      "showSessionList": true,
      "enableFileUpload": false
    }
  },
  "files": {
    "outputDirectory": "output",
    "watchDirectories": ["output"],
    "fileExtensions": {
      "supported": ["json", "md", "txt", "csv", "py", "js", "ts", "log"],
      "defaultViewer": {
        "json": "code",
        "md": "markdown",
        "csv": "table",
        "default": "code"
      }
    }
  },
  "websocket": {
    "host": "localhost",
    "port": 8000,
    "reconnectInterval": 3000,
    "maxReconnectAttempts": 10
  },
  "session": {
    "persistent": false,
    "maxSessions": 50,
    "defaultSessionTitle": "New Session"
  },
  "server": {
    "port": 50002,
    "allowedHosts": ["localhost", "127.0.0.1", "0.0.0.0", "*"]
  }
}
